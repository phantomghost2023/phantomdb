{
  "dashboard": {
    "id": null,
    "title": "PhantomDB Overview",
    "tags": ["phantomdb", "database"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "singlestat",
        "title": "Database Uptime",
        "gridPos": {"x": 0, "y": 0, "w": 4, "h": 3},
        "targets": [
          {
            "expr": "phantomdb_uptime_seconds",
            "format": "time_series"
          }
        ],
        "options": {
          "fieldOptions": {
            "calcs": ["last"]
          },
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto",
          "orientation": "horizontal"
        },
        "valueFontSize": "80%"
      },
      {
        "id": 2,
        "type": "singlestat",
        "title": "Active Connections",
        "gridPos": {"x": 4, "y": 0, "w": 4, "h": 3},
        "targets": [
          {
            "expr": "phantomdb_connections_active",
            "format": "time_series"
          }
        ],
        "options": {
          "fieldOptions": {
            "calcs": ["last"]
          },
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 3,
        "type": "singlestat",
        "title": "Queries Per Second",
        "gridPos": {"x": 8, "y": 0, "w": 4, "h": 3},
        "targets": [
          {
            "expr": "rate(phantomdb_queries_total[5m])",
            "format": "time_series"
          }
        ],
        "options": {
          "fieldOptions": {
            "calcs": ["last"]
          },
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "type": "singlestat",
        "title": "Storage Usage %",
        "gridPos": {"x": 12, "y": 0, "w": 4, "h": 3},
        "targets": [
          {
            "expr": "(phantomdb_storage_used_bytes / phantomdb_storage_total_bytes) * 100",
            "format": "time_series"
          }
        ],
        "options": {
          "fieldOptions": {
            "calcs": ["last"]
          },
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Query Performance",
        "gridPos": {"x": 0, "y": 3, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(phantomdb_queries_total[5m])",
            "legendFormat": "Queries/sec",
            "format": "time_series"
          },
          {
            "expr": "phantomdb_connections_active",
            "legendFormat": "Active Connections",
            "format": "time_series"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Count"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "type": "graph",
        "title": "Query Latency (95th Percentile)",
        "gridPos": {"x": 12, "y": 3, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(phantomdb_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "format": "time_series"
          },
          {
            "expr": "histogram_quantile(0.50, rate(phantomdb_query_duration_seconds_bucket[5m]))",
            "legendFormat": "Median",
            "format": "time_series"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "type": "graph",
        "title": "Storage Utilization",
        "gridPos": {"x": 0, "y": 11, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "phantomdb_storage_used_bytes",
            "legendFormat": "Used Bytes",
            "format": "time_series"
          },
          {
            "expr": "phantomdb_storage_total_bytes",
            "legendFormat": "Total Bytes",
            "format": "time_series"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "bytes",
            "label": "Storage"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "type": "graph",
        "title": "Request Rate",
        "gridPos": {"x": 12, "y": 11, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(phantomdb_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "format": "time_series"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Rate"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "2d",
        "7d",
        "30d"
      ]
    }
  }
}